<style lang="scss">
  .hero {
    height: 720px;

    &__content {
      margin-top: 115px;
    }

    &__heading {
      display: block;
      position: absolute;
      max-width: 800px;
      font-size: 88px;
      font-weight: 700;
      color: hsl(0, 0%, 100%);
      line-height: 1;
      padding-bottom: 41px;

      // border: red solid 1px;
    }

    &__text {
      position: relative;
      margin-top: 200px;
      max-width: 500px;
      font-size: 18px;
      line-height: 1.59;
      padding-bottom: 66px;
      color: hsl(0, 0%, 85%);
    }
  }

  .logo-span {
    color: var(--primary-green-1);
  }

  .bg-pattern-rings {
    position: absolute;
    right: 50%;
    translate: -50%;
    top: 130px;
    background-image: url("../../pattern-rings.svg");
    width: 530px;
    height: 129px;
  }

  .primary-link {
    margin-right: 16px;
  }

  .secondary-link {
    margin-left: 16px;
  }

  img {
    position: absolute;
    top: 0;
    left: 50%;
    translate: 25%;
    margin-bottom: 104px;
    height: auto;
  }

  .bottom-border {
    border-bottom: 1px solid #fff;
  }
</style>

<section class="hero">
  <div class="container bottom-border">
    <div class="hero__content">
        <img
          src="./johnny-hero-desktop.svg"
          alt="Black and white picture of Johnny Estrada."
          loading="lazy"
          width="445px"
          height="720px"
        />

      <div class="bg-pattern-rings"></div>
      <h1 class="hero__heading">
        Nice to meet you!<br /> I'm <span class="logo-span">Johnny.</span>
      </h1>
      <p class="hero__text">
        Based in San Diego, I'm a web developer<br /> passionate about building accessible
        web apps<br /> that users love.
      </p>
      <a href="#projects" class="primary-link">LEARN MORE</a>
      <!-- <a href="/contact" class="secondary-link">CONTACT ME</a> -->
    </div>
  </div>
</section>
